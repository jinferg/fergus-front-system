// Padding Utility
// ============================================================

@u-pad-xtight: @vr1;
@u-pad-tight: @vr3;
@u-pad-narrow: @vr5;
@u-pad-wide: @vr7;
@u-pad-xwide: @vr9;

// Default Padding Scale
// ------------------------------


