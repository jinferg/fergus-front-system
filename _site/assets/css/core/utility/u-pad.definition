    &-none {
      padding-top:  0 !important;
      padding-bottom: 0 !important;
    }
    &-xtight {
      padding-top: @u-pad-xtight !important;
      padding-bottom: @u-pad-xtight !important;
    }
    &-tight {
      padding-top: @u-pad-tight !important;
      padding-bottom: @u-pad-tight !important;
    }
    & {
      padding-top: @u-pad-narrow !important;
      padding-bottom: @u-pad-narrow !important;
    }
    &-wide {
      padding-top: @u-pad-wide !important;
