      padding-left:  0 !important;
      padding-right: 0 !important;
    }
    &-xtight {
      padding-left: @u-pad-xtight !important;
      padding-right: @u-pad-xtight !important;
    }
    &-tight {
      padding-left: @u-pad-tight !important;
      padding-right: @u-pad-tight !important;
    }
    &-wide {
      padding-left: @u-pad-wide !important;
      padding-right: @u-pad-wide !important;
    }
    &-xwide {
      padding-left: @u-pad-xwide !important;
      padding-right: @u-pad-xwide !important;
    }
  }

  // Y
