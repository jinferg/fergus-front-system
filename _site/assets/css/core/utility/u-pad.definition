    padding-bottom: @u-pad-narrow !important;
    &-none {
      padding-bottom: 0 !important;
    }
    &-xtight {
      padding-bottom: @u-pad-xtight !important;
    }
    &-tight {
      padding-bottom: @u-pad-tight !important;
    }
    &-wide {
      padding-bottom: @u-pad-wide !important;
    }
    &-xwide {
      padding-bottom: @u-pad-xwide !important;
    }
  }

  // Left
