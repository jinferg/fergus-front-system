// Viewport Padding
// ------------------------------
// Generates viewport based properties
.mixin-pad-viewport(@count, @prefix, @i: 1) when (@i =< @count) {
  .u-pad@{prefix}top-@{i}vh {
    padding-top: @i+0vh !important;
  }
  .u-pad@{prefix}right-@{i}vw {
    padding-right: @i+0vw !important;
  }
  .u-pad@{prefix}bottom-@{i}vh {
    padding-bottom: @i+0vh !important;
  }
  .u-pad@{prefix}left-@{i}vw {
    padding-left: @i+0vw !important;
  }
  .u-pad@{prefix}x-@{i}vw {
    padding-left: @i+0vw !important;
    padding-right: @i+0vw !important;
  }
  .u-pad@{prefix}y-@{i}vh {
    padding-top: @i+0vh !important;
    padding-bottom: @i+0vh !important;
  }
  .mixin-pad-viewport(@count, @prefix, (@i + 1));
}

.mixin-pad-viewport(20, -);
@media @mobile {
  .mixin-pad-viewport(20, -m-);
}
@media @tablet {
  .mixin-pad-viewport(20, -t-);
}
@media @desktop {
  .mixin-pad-viewport(20, -d-);
}
