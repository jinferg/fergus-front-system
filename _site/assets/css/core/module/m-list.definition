// List Module
// ============================================================

@m-list__tight: @vr0;
@m-list__narrow: @vr0;
@m-list__wide: @vr1;


.m-list {

  list-style: none;
  margin-bottom: 0;

  ul, ol {
    list-style: none;
    margin-bottom: 0;
  }

  &__item {
    display: block;
  }


  // Direction
  // ------------------------------

  &.-inline {
    & > li, .m-list__item {
      display: inline-block;
      margin-bottom: 0;
    }
    &.-tight,&.-narrow,&.-wide {
      & > li, .m-list__item {
        margin-bottom: 0;
      }
    }
  }
  &.-inline.-raw {
    & > li, .m-list__item {
      margin-right: 0;
    }
    li, .m-list__item:last-child {
      margin-right: 0;
    }
  }
  &.-inline.-tight {
    & > li, .m-list__item {
      margin-right: @m-list__tight;
    }
    li, .m-list__item:last-child {
      margin-right: 0;
    }
  }
  &.-inline.-narrow {
    & > li, .m-list__item {
      margin-right: @m-list__narrow;
    }
    li, .m-list__item:last-child {
      margin-right: 0;
    }
  }
  &.-inline.-wide {
    & > li, .m-list__item {
      margin-right: @m-list__wide;
    }
    li, .m-list__item:last-child {
      margin-right: 0;
    }
  }


  // Spacing
  // ------------------------------

  &.-tight {
    & > li, .m-list__item {
      margin-bottom: @m-list__tight;
    }
  }
  &.-narrow {
    & > li, .m-list__item {
      margin-bottom: @m-list__narrow;
    }
  }
  &.-wide {
    & > li, .m-list__item {
      margin-bottom: @m-list__wide;
    }
  }
}
